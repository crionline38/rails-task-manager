<h1>Tasks#index</h1>
<a href="<%= new_task_path %>">Create</a>
<ol>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.name, task_path(task) %>
      => <%= task.done %>
      <%= link_to "Edit", edit_task_path(task) %>
      <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ol>

